{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [".config/jest/setupTests.ts", "src/**/*"]
}
